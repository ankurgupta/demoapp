<h1>Articles</h1>

<div id="articles">
<% @articles.each do |article| %>
  <h2><%= link_to article.name, article %></h2>
  <% unless article.published %>
    (<i>Draft</i>)
  <% end %>
  <%= simple_format article.description %>
<% end %>
</div>

<% if can? :create, Article %>
  <p><%= link_to "New Article", new_article_path %></p>
<% end %>